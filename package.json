{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "My personal website",
  "main": "gulpfile.js",
  "scripts": {
    "prettier": "prettier --check './src/**/*.{html,css,js}'",
    "prettierFix": "prettier --write './src/**/*.{html,css,js}'",
    "lint": "stylelint './src/**/*.css'",
    "lintFix": "stylelint './src/**/*.css' --fix",
    "checkAll": "npm run prettier && npm run lint",
    "fixAll": "npm run prettierFix && npm run lintfix",
    "build": "gulp build",
    "dev": "gulp"
  },
  "author": "Alexander Kvapel",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1"
  },
  "browserslist": [
    "last 5 versions"
  ]
}
